<% form_for(@movie, url_for(:movies, :create)) do |m| %>
  Name   : <%= m.text_field :name %><br />
  Rating : <%= m.select :rating,
    :options => [['★', 1],
                 ['★★', 2],
                 ['★★★', 3],
                 ['★★★★', 4],
                 ['★★★★★', 5]],
    :selected => [['★', 1]] %><br />
  <%= m.submit %><br />
<% end %>
